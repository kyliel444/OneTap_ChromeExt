{
    "manifest_version": 3,
    "name": "OneTap",
    "version": "1.0",
    "description": "Drag and drop an image from the webpage and save product details as a PDF.",
    "permissions": ["activeTab", "downloads"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "host_permissions": ["*://*/*"],
    "action": {
      "default_title": "Open OneTap"
    }
  }
  